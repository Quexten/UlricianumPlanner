                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/tableentry"
                    android:id="@+id/fri89" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:minHeight="1dp"
                android:background="#bdbdbd"/>

